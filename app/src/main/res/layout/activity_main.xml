<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.anglaisapp.ListeningMainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="56dp"
      android:fontFamily="serif"
      android:text="N'Gomda"
      android:layout_marginBottom="20dp"
      android:layout_centerInParent="true"
      android:textColor="#000000"
      android:textSize="80sp"
      android:textStyle="bold"
     android:id="@+id/anglais"/>



  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_below="@+id/anglais"
     >
  <Button
      android:id="@+id/button_vocabulary"
      android:layout_width="200dp"
      android:text="Vocabulary"
      android:textColor="#FFFFFF"
      android:layout_marginBottom="24dp"
      android:background="@drawable/buttondesign"
      android:layout_centerHorizontal="true"
      android:textSize="16sp"
      android:layout_height="60dp"
     />
    <Button
        android:id="@+id/button_listening"
        android:layout_width="200dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttondesign"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_vocabulary"
        android:text="Listening"/>
  <Button
      android:id="@+id/button_reading"
      android:layout_width="200dp"
      android:layout_height="60dp"
      android:layout_marginTop="24dp"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:background="@drawable/buttondesign"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/button_listening"
      android:text="Reading"/>

  </RelativeLayout>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
