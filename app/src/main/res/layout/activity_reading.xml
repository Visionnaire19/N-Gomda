<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.anglaisapp.ReadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textview_textname"
            tools:text="Text Name"
         style="@style/ReadingName"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/text_view"
                tools:text="This is the text"
               style="@style/Text"/>

            <TextView
                style="@style/ReadingQuestions"
                android:id="@+id/question_one"
                tools:text="Question1"
               />

            <TextView

                android:id="@+id/question_two"
                tools:text="Question 2"
                style="@style/ReadingQuestions"
                />

            <TextView

                android:id="@+id/question_three"
                tools:text="Question3"
                style="@style/ReadingQuestions"

                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
