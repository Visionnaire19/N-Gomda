<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.anglaisapp.ReadingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_one"
            style="@style/Button_style"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Text 1" />

        <Button

            android:id="@+id/button_two"
            style="@style/Button_style"
            android:layout_centerHorizontal="true"
            android:text="Text 2" />

        <Button

            android:id="@+id/button_three"
            style="@style/Button_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 3" />

        <Button

            android:id="@+id/button_four"
            style="@style/Button_style"
            android:layout_below="@id/button_one"
            android:text="Text 4" />

        <Button

            android:id="@+id/button_five"
            style="@style/Button_style"
            android:layout_below="@+id/button_two"
            android:layout_centerHorizontal="true"
            android:text="Text 5" />

        <Button

            android:id="@+id/button_six"
            style="@style/Button_style"
            android:layout_below="@id/button_three"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 6" />

        <Button

            android:id="@+id/button_seven"
            style="@style/Button_style"
            android:layout_below="@id/button_four"
            android:text="Text 7" />

        <Button

            android:id="@+id/button_eight"
            style="@style/Button_style"
            android:layout_below="@+id/button_five"
            android:layout_centerHorizontal="true"
            android:text="Text 8" />

        <Button
            android:id="@+id/button_nine"
            style="@style/Button_style"
            android:layout_below="@id/button_six"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 9" />

        <Button

            android:id="@+id/button_ten"
            style="@style/Button_style"
            android:layout_below="@id/button_seven"
            android:text="Text 10" />

        <Button

            android:id="@+id/button_eleven"
            style="@style/Button_style"
            android:layout_below="@+id/button_eight"
            android:layout_centerHorizontal="true"
            android:text="Text 11" />

        <Button

            android:id="@+id/button_twelve"
            style="@style/Button_style"
            android:layout_below="@id/button_nine"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 12" />

        <Button

            android:id="@+id/button_thirteen"
            style="@style/Button_style"
            android:layout_below="@id/button_ten"
            android:text="Text 13" />

        <Button

            android:id="@+id/button_fourteen"
            style="@style/Button_style"
            android:layout_below="@+id/button_eleven"
            android:layout_centerHorizontal="true"
            android:text="Text 14" />

        <Button

            android:id="@+id/button_fifteen"
            style="@style/Button_style"
            android:layout_below="@id/button_twelve"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 15" />

        <Button

            android:id="@+id/button_sixteen"
            style="@style/Button_style"
            android:layout_below="@id/button_thirteen"
            android:text="Text 16" />


        <Button

            android:id="@+id/button_seventeen"
            style="@style/Button_style"
            android:layout_below="@+id/button_fourteen"
            android:layout_centerHorizontal="true"
            android:text="Text 17" />


        <Button

            android:id="@+id/button_eighteen"
            style="@style/Button_style"
            android:layout_below="@id/button_fifteen"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Text 18" />

        <Button

            android:id="@+id/button_nineteen"
            style="@style/Button_style"
            android:layout_below="@id/button_sixteen"
            android:text="Text 19" />

        <Button
            android:id="@+id/button_twenty"
            style="@style/Button_style"
            android:layout_below="@+id/button_seventeen"
            android:layout_centerHorizontal="true"
            android:text="Text 20" />
    </RelativeLayout>

</ScrollView>
